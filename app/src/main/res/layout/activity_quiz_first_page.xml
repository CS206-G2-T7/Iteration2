<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <TextView
        android:id="@+id/quiz_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/quiz_intro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/quiz_background"
        android:layout_width="373dp"
        android:layout_height="582dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.785"
        app:srcCompat="@drawable/quiz_questions_background" />

    <TextView
        android:id="@+id/quiz_qn1"
        android:layout_width="302dp"
        android:layout_height="73dp"
        android:layout_marginEnd="34dp"
        android:text="What kind of activities do you enjoy?"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/quiz_background"
        app:layout_constraintEnd_toEndOf="@+id/quiz_background"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/quiz_background"
        app:layout_constraintTop_toTopOf="@+id/quiz_background"
        app:layout_constraintVertical_bias="0.044" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="299dp"
        android:layout_height="31dp"
        android:progress="33"
        app:layout_constraintBottom_toBottomOf="@id/quiz_background"
        app:layout_constraintEnd_toEndOf="@+id/quiz_background"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@+id/quiz_background"
        app:layout_constraintTop_toTopOf="@+id/quiz_background"
        app:layout_constraintVertical_bias="0.167" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/quiz_qn1_op1"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/text_background"
        android:text="Outdoor Adventures"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/quiz_background"
        app:layout_constraintEnd_toEndOf="@+id/quiz_background"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/quiz_background"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        app:layout_constraintVertical_bias="0.021" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/quiz_qn1_op2"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/text_background"
        android:text="Cultural Experiences"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/quiz_background"
        app:layout_constraintEnd_toEndOf="@+id/quiz_background"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/quiz_background"
        app:layout_constraintTop_toBottomOf="@+id/quiz_qn1_op1"
        app:layout_constraintVertical_bias="0.031" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/quiz_qn1_op3"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/text_background"
        android:text="Music and Arts"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/quiz_background"
        app:layout_constraintEnd_toEndOf="@+id/quiz_background"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/quiz_background"
        app:layout_constraintTop_toBottomOf="@+id/quiz_qn1_op2"
        app:layout_constraintVertical_bias="0.034" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/quiz_qn1_op4"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/text_background"
        android:text="Sports and Recreation"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/quiz_background"
        app:layout_constraintEnd_toEndOf="@+id/quiz_background"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/quiz_background"
        app:layout_constraintTop_toBottomOf="@+id/quiz_qn1_op3"
        app:layout_constraintVertical_bias="0.038" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/quiz_qn1_op5"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/text_background"
        android:text="Dining and Food Exploration"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/quiz_background"
        app:layout_constraintEnd_toEndOf="@+id/quiz_background"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/quiz_background"
        app:layout_constraintTop_toBottomOf="@+id/quiz_qn1_op3"
        app:layout_constraintVertical_bias="0.296" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/quiz_qn1_op6"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/text_background"
        android:text="Shopping and Markets"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/quiz_background"
        app:layout_constraintEnd_toEndOf="@+id/quiz_background"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/quiz_background"
        app:layout_constraintTop_toBottomOf="@+id/quiz_qn1_op5"
        app:layout_constraintVertical_bias="0.104" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/quiz_next"
        android:layout_width="236dp"
        android:layout_height="41dp"
        android:layout_marginStart="36dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/button_background"
        android:text="Next"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/quiz_background"
        app:layout_constraintEnd_toEndOf="@+id/quiz_background"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="@+id/quiz_background"
        app:layout_constraintTop_toBottomOf="@+id/quiz_qn1_op6"
        app:layout_constraintVertical_bias="0.483" />

</androidx.constraintlayout.widget.ConstraintLayout>